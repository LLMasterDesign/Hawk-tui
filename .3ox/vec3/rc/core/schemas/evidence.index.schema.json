{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence.Index Schema",
  "description": "Formal evidence binding format for claim verification",
  "type": "object",
  "required": [
    "index_id",
    "claim_id",
    "evidence_bindings",
    "confidence_score",
    "validation_timestamp"
  ],
  "properties": {
    "index_id": {
      "type": "string",
      "description": "Unique evidence index identifier",
      "pattern": "^evidence_[a-f0-9]{16}$"
    },
    "claim_id": {
      "type": "string",
      "description": "Reference to claim being verified",
      "pattern": "^claim_[a-f0-9]{16}$"
    },
    "evidence_bindings": {
      "type": "array",
      "description": "Array of evidence-to-claim bindings",
      "items": {
        "type": "object",
        "required": ["evidence_id", "binding_type", "strength"],
        "properties": {
          "evidence_id": {
            "type": "string",
            "description": "Unique evidence identifier"
          },
          "binding_type": {
            "type": "string",
            "enum": ["direct", "inferential", "correlational", "expert_opinion"],
            "description": "Type of evidence binding"
          },
          "strength": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Confidence strength of binding (0.0-1.0)"
          },
          "source_hash": {
            "type": "string",
            "description": "SHA256 hash of evidence source",
            "pattern": "^[a-f0-9]{64}$"
          },
          "binding_metadata": {
            "type": "object",
            "description": "Additional binding information",
            "additionalProperties": true
          }
        }
      }
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Overall confidence score for claim verification"
    },
    "validation_timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of validation",
      "format": "date-time"
    },
    "validation_method": {
      "type": "string",
      "enum": ["automated", "human_review", "expert_validation"],
      "description": "Method used for validation"
    },
    "unknown_markers": {
      "type": "array",
      "description": "Claims marked as unknown with reasons",
      "items": {
        "type": "object",
        "properties": {
          "claim_fragment": {"type": "string"},
          "reason": {"type": "string"},
          "insufficient_evidence": {"type": "boolean"}
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional index metadata",
      "properties": {
        "validator_version": {"type": "string"},
        "processing_time_ms": {"type": "integer", "minimum": 0},
        "evidence_sources_count": {"type": "integer", "minimum": 0}
      }
    }
  }
}